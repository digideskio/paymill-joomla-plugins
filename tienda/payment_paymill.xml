<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="tienda" method="upgrade">
	<name>Tienda - Payment - Paymill</name>
	<version>1.0.0</version>
	<creationDate>Augest 2013</creationDate>
	<author>Techjoomla</author>
	<authorEmail>support@techjoomla.com</authorEmail>
	<authorUrl>http://www.techjoomla.com</authorUrl>
	<copyright>2013 Techjoomla.com</copyright>
	<license>GNU General Public License v2</license>
	<description>PAYMILL_PLG_DESC</description>
	<files>
		<filename plugin="payment_paymill">payment_paymill.php</filename>
		<folder>payment_paymill</folder>
		<folder>jform</folder>
	</files>
	<languages>
		<language tag="en-GB">languages/en-GB.plg_tienda_payment_paymill.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" label="basic">
				<field name="public_key" type="text" size="50" default="" label="PAYMILL_PUBLIC_KEY" description="PAYMILL_PUBLIC_KEY_DES"/>
				<field name="private_key" type="text" size="50" default="" label="PAYMILL_PRIVATE_KEY" description="PAYMILL_PRIVATE_KEY_DES"/>
				<field name="sandbox" type="radio" default="0" label="PAYMILL_SANDBOX" description="PAYMILL_SANDBOX_DES">
					<option value="0">PAYMILL_TEST</option>
					<option value="1">PAYMILL_LIVE</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<params addpath="/administrator/components/com_tienda/elements">
		<param name="public_key" type="text" size="50" default="" label="PAYMILL_PUBLIC_KEY" description="PAYMILL_PUBLIC_KEY_DES"/>
		<param name="private_key" type="text" default="" label="PAYMILL_PRIVATE_KEY" description="PAYMILL_PRIVATE_KEY_DES"/>
		<param name="sandbox" type="radio" default="0" label="PAYMILL_SANDBOX" description="PAYMILL_SANDBOX_DES">
			<option value="0">PAYMILL_TEST</option>
			<option value="1">PAYMILL_LIVE</option>
		</param>
	</params>
</install>
